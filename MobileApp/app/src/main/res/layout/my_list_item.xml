<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewProblem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:padding="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:contentDescription="eikona"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="2dp"
        tools:srcCompat="@tools:sample/avatars[0]" />


    <TextView
        android:id="@+id/txtProblem"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewProblem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="-110dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/imageViewProblem"
        android:layout_toRightOf="@+id/imageViewProblem"
        android:text="TextView"
        android:textColor="#000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/txtDay"
        android:textAlignment="center"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtMonth"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txtMonth"
        android:textColor="#000"
        android:text="30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/txtMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtProblem"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-101dp"
        android:layout_marginTop="5dp"
        android:text="30"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/txtYear"
        android:textColor="#000"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtDay"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txtDay"
        android:layout_toRightOf="@+id/txtDay"
        android:text="2018"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="21dp" />

    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/txtProblem"
        android:layout_alignRight="@+id/txtProblem"
        android:layout_alignBottom="@+id/imageViewProblem"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_thumb_up_black_24dp"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="40dp" />

    <ImageButton
        android:id="@+id/btnDisslike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txtProblem"
        android:layout_alignRight="@+id/txtProblem"
        android:layout_alignBottom="@+id/imageViewProblem"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ic_thumb_down_black_24dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="39dp" />

    <TextView
        android:id="@+id/textLikes"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewProblem"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/btnLike"
        android:text="(15)" />

    <TextView
        android:id="@+id/textDislikes"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDisslike"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/btnDisslike"
        android:text="(15)" />

    <TextView
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/imageViewProblem"
        android:scrollbars = "vertical"
        android:text="TextView"
        android:textColor="#000" />

</RelativeLayout>